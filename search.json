---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "descrip"  : "{{ post.description }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "tagAr"    : "{% assign sorted_tags = post.tags %}{% for my_tag in sorted_tags %}<span class='tag'><a href='/tags/#{{ my_tag }}'>{{ my_tag }}</a></span>{% endfor %}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "shortdate"  : "{{ post.date | date: '%d %b %Y' }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
